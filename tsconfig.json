{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "system",
    "esModuleInterop": true,
    "outDir": "./build",
    "outFile": "./build/index.js",
    "allowJs": true,
    "target": "es5",
    "moduleResolution": "Node",
    "downlevelIteration": true
  },

  "include": [ "**/*" ],
  "exclude": [ "node_modules" ]
}